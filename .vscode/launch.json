{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [

        {
            "name": "TS FILE",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/.bin/ts-node",
            "args": ["${relativeFile}"],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "protocol": "inspector",
            "env": {
                "NODE_ENV": "development",
                "NODE_CONFIG_DIR": "./src/config",
                "TESTING": "true",
                "LOG_LEVEL": "error"
            },
            "runtimeArgs": ["--nolazy"]
        },
        {
            "name": "TS SPEC FILE",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/node_modules/.bin/jest",
            "args": ["${relativeFile}", "--detectOpenHandles"],
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "protocol": "inspector",
            "env": {
                "NODE_ENV": "development",
                "NODE_CONFIG_DIR": "./src/config",
                "TESTING": "true",
                "LOG_LEVEL": "error",
                "NODE_APP_INSTANCE": "test"
            },
            "runtimeArgs": ["--nolazy"]
        },
        {
            "name": "App against local (npm start)",
            "type": "node",
            "request": "launch",
            "args": ["${workspaceRoot}/src/bin/www.ts"],
            "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "protocol": "inspector",
            "env": {
                "NODE_CONFIG_DIR": "./src/config",
                "TESTING": "true",
                "NODE_ENV": "development",
                // "NODE_CONFIG":
                //   "{\\\"database\\\":{\\\"url\\\":\\\"mongodb://localhost:27017/miwago_test\\\"}}",
                "NODE_APP_INSTANCE": ""
            }
        },
        {
            "name": "App against dev server",
            "type": "node",
            "request": "launch",
            "args": ["${workspaceRoot}/src/bin/www.ts"],
            "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
            "sourceMaps": true,
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "protocol": "inspector",
            "env": {
                "NODE_CONFIG_DIR": "./src/config",
                "TESTING": "true",
                "NODE_ENV": "production",
                "NODE_CONFIG": "{\"database\":{\"url\":\"mongodb://localhost:27017/gym-test\"}}",
                "NODE_APP_INSTANCE": "beta"
            }
        }
    ]
}